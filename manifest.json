{
  "manifest_version": 2,

  "name": "post-spellcheck",
  "description": "Find out what you spelled wrong, after it's too late",
  "version": "1.0",

  "browser_action": {
    "default_icon": "popup.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [ {
    "matches": [
      "https://mail.google.com/*",
      "https://hangouts.google.com/*",
      "file:///Users/katherine/ka73r/rc/projects/postspellcheck/webpage/index.html"
    ],
    "js": [
      "jquery.js",
      "post-spellcheck.js"
    ],
    "all_frames": true
  } ]
}
