{
  "manifest_version": 2,

  "name": "Post-Spellcheck",
  "version": "1.0.0",
  "description": "Find out what you spelled wrong, after it's too late",

  "browser_action": {
    "default_icon": "images/popup.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [ {
    "matches": [
      "file:///Users/*",
      "https://mail.google.com/*",
      "https://hangouts.google.com/*",
      "https://*.slack.com/*"
    ],
    "js": [
      "bin/js/app.bundle.js"
    ],
    "all_frames": true
  } ],

  "permissions": [
    "tabs",
    "file:///Users/*",
    "https://mail.google.com/*",
    "https://hangouts.google.com/*",
    "https://*.slack.com/*"
  ]
}
